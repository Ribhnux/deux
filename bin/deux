#!/usr/bin/env node

require('commander')
  .version(require('../package').version)
  .usage('<command> [options]')
  .command('new', 'Create a new theme')
  .command('switch [theme]', 'Switch to another theme')
  .command('add [option]', 'Add plugin dependencies, assets, page/loop template, action, and filter')
  .command('remove [option]', 'Remove plugin dependencies, assets, page/loop template, action, and filters')
  .command('list [option]', 'Display plugin dependencies, assets, page/loop templates, actions, and filters')
  .command('update', 'Check and update assets or plugin dependencies if there is any newer source')
  .command('status', 'Displays current theme status')
  .command('dev', 'Run in development mode')
  .command('check', 'Run theme check')
  .command('release', 'Release theme')
  .parse(process.argv)
