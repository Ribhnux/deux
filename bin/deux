#!/usr/bin/env node

require('commander')
  .version(require('../package').version)
  .usage('<command> [options]')
  .command('new', 'generate a new theme')
  .command('switch [theme]', 'switch to another theme')
  .command('add [option]', 'add plugin dependencies, assets, page template, action, and filter')
  .command('remove [option]', 'remove plugin dependencies, assets, page template, action, and filter')
  .command('list [option]', 'list of plugin dependencies, assets, page template, action, and filter')
  .command('status', 'display current theme status')
  .command('dev', 'development mode')
  .command('check', 'run theme check')
  .command('release', 'release theme to repository')
  .parse(process.argv)
