#!/usr/bin/env node

require('commander')
  .version(require('../package').version)
  .usage('<command> [options]')
  .command('new', 'Create a new theme')
  .command('switch [theme]', 'Switch to another theme')
  .command('add [option]', 'Add plugin dependencies, assets, templates, and hooks')
  .command('remove [option]', 'Remove plugin dependencies, assets, templates, and hooks')
  .command('list [option]', 'Display list of projects, plugin dependencies, assets, templates, and hooks')
  .command('update', 'Check and update assets or plugin dependencies if there is any newer source')
  .command('status', 'Display current theme status')
  .command('dev', 'Run in development mode')
  .command('check', 'Run theme check')
  .command('release', 'Release theme')
  .parse(process.argv)
